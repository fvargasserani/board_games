<p id="notice"><%= notice %></p>

<h1>Board Games</h1>

<table>
  <thead>
    <tr>
      <th>Box Image</th>
      <th>Name</th>
      <th>Rules</th>
      <th>Download Rules</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @board_games.each do |board_game| %>
      <tr>
        <td><%= image_tag board_game.image.variant(resize: "100x100").processed %></td>  
        <td><%= board_game.name %></td>
        <td><%= board_game.rules %></td>
        <td><%= board_game.rules_pdf %></td>
        <td><%= link_to 'Show', board_game %></td>
        <td><%= link_to 'Edit', edit_board_game_path(board_game) %></td>
        <td><%= link_to 'Destroy', board_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board Game', new_board_game_path %>
